# =============================================================================
# ENVIRONMENT CONFIGURATION
# =============================================================================

# Environment
NODE_ENV="development"

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================

# Better Auth
BETTER_AUTH_SECRET="your-32-character-secret-key-here"
NEXT_PUBLIC_AUTH_URL="http://localhost:3003"
NEXT_PUBLIC_APP_URL="http://localhost:3001"
NEXT_PUBLIC_WEB_URL="http://localhost:3000"

# Skip authentication for development (set to false for production)
NEXT_PUBLIC_SKIP_AUTH="false"

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Primary Database (PostgreSQL)
DATABASE_URL="postgresql://username:password@localhost:5432/database_name"

# Database Password (for reference)
DATABASE_PASSWORD="your-database-password"

# =============================================================================
# SUPABASE CONFIGURATION
# =============================================================================

NEXT_PUBLIC_SUPABASE_URL="https://your-project.supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-supabase-anon-key"

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================

UPSTASH_REDIS_REST_URL="https://your-redis-url"
UPSTASH_REDIS_REST_TOKEN="your-redis-token"

# =============================================================================
# API CONFIGURATION
# =============================================================================

NEXT_PUBLIC_API_URL="http://localhost:3001/api"
NEXT_PUBLIC_FRAGMENT_URL="http://localhost:3001"

# =============================================================================
# BILLING & PAYMENTS
# =============================================================================

# Autumn Billing
AUTUMN_SECRET_KEY="your-autumn-api-key"

# Stripe
STRIPE_SECRET_KEY="sk_test_..."
STRIPE_PUBLISHABLE_KEY="pk_test_..."
STRIPE_WEBHOOK_SECRET="whsec_..."

# =============================================================================
# EMAIL SERVICES
# =============================================================================

# Resend (for transactional emails)
RESEND_API_KEY="re_..."

# =============================================================================
# MONITORING & ANALYTICS
# =============================================================================

# Better Stack
BETTER_STACK_URL="your-betterstack-url"
BETTERSTACK_API_KEY="your-betterstack-api-key"

# =============================================================================
# AI PROVIDERS
# =============================================================================

# Default AI Provider
AI_PROVIDER="openai"

# OpenAI
OPENAI_API_KEY="sk-..."

# Anthropic
ANTHROPIC_API_KEY="sk-ant-..."

# Google Generative AI
GOOGLE_GENERATIVE_AI_API_KEY="..."

# Perplexity
PERPLEXITY_API_KEY="pplx-..."

# OpenRouter
OPENROUTER_API_KEY="sk-or-v1-..."
OPENROUTER_DEFAULT_MODEL=""

# =============================================================================
# WEB SCRAPING & DATA COLLECTION
# =============================================================================

# Firecrawl
FIRECRAWL_API_KEY="fc-..."

# =============================================================================
# MASTRA AGENTS CONFIGURATION
# =============================================================================

# Agent Settings
AGENTS_WORKING_MEMORY="true"
LAST_MESSAGES="20"

# Core Authority
CORE_AUTHORITY="your-core-authority-key"